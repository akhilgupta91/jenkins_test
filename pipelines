pipeline {
    agent any
    stages{
        stage("stage1") {
        steps {
            echo "testing echo"
        }
    }
        stage("stage2") {
            steps {
                echo "1"
            }
        }
    }
    }
    
 ----
    
    node {
        stage("stage1") {
               echo "testing echo"
        }
        stage("stage2") {
                echo 1
        }
}

